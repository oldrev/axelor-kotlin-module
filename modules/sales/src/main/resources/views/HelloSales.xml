<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.2.xsd">

	<grid name="hello-sales-grid" title="HelloSales List" model="com.axelor.sales.db.HelloSales">
		<field name="title"/>
	</grid>

	<form name="hello-sales-form" title="HelloSales" model="com.axelor.sales.db.HelloSales">
		<panel title="Overview">
			<field name="title" x-span="12"/>
			<field name="publishedOn"/>
			<field name="tags"/>
		</panel>
		<panel title="Message">
			<field name="message" showTitle="false" x-span="12"/>
		</panel>
		<panel sidebar="true">
			<field name="createdOn"/>
			<field name="createdBy"/>
			<field name="updatedOn"/>
			<field name="updatedBy"/>
		</panel>
	</form>

</object-views>
